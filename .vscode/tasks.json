{
    "version": "2.0.0",
    "tasks":[
      {
        "label": "Build Shared",
        "type": "shell",
        "command": "npm run build",
        "options": {
          "cwd": "${workspaceFolder}/firebase/functions/shared"
        }
      },
      {
        "label": "Build Web App",
        "type": "shell",
        "command": "npm run build",
        "options": {
          "cwd": "${workspaceFolder}/webapp"
        }
      },
      {
        "label": "Start Web App",
        "type": "shell",
        "command": "npm start",
        "options": {
          "cwd": "${workspaceFolder}/webapp"
        },
        "dependsOn": "Build Web App",
        "isBackground": true,
        "problemMatcher": {
          "owner": "custom",
          "pattern": {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Compiling...",
            "endsPattern": "Compiled successfully"
          }
        },
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "Build Firebase Functions",
        "type": "shell",
        "command": "npm run build:watch",
        "options": {
          "cwd": "${workspaceFolder}/firebase/functions"
        },
        "isBackground": true,
        "problemMatcher": {
          "owner": "custom",
          "pattern": {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Starting compilation",
            "endsPattern": "Found 0 errors"
          }
        },
        "presentation": {
          "reveal": "always",
          "panel": "new"
        }
      },
      {
        "label": "Start Firebase Emulators",
        "type": "shell",
        "command": "bash",
        "args": [
          "-c",
          ". ~/.nvm/nvm.sh && nvm use 18 && firebase emulators:start --inspect-functions"
        ],
        "options": {
          "cwd": "${workspaceFolder}/firebase"
        },
        "dependsOn": "Build Firebase Functions",
        "isBackground": true,
        "problemMatcher": {
          "owner": "custom",
          "pattern": {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "emulators: Starting emulators",
            "endsPattern": "All emulators ready!"
          }
        },
        "presentation": {
          "reveal": "always",
          "panel": "new"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Kill Emulators",
        "type": "shell",
        "command": "lsof -t -i:8080 -i:9000 -i:9099 -i:9199 -i:9090 -i:4000 | xargs kill -9",
      },
      {
        "label": "Start Development App",
        "dependsOrder": "sequence",
        "dependsOn": ["Build Shared", "Start Firebase Emulators", "Start Web App"]
      }
    ]
  }